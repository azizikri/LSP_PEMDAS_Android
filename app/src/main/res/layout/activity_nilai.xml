<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NilaiActivity">

    <EditText
        android:id="@+id/input_uh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="UH"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/text_ket"
        android:layout_width="365dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/black_100"
        android:gravity="center"
        android:text="Keterangan"
        android:textColor="@color/soft_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_hasil" />

    <EditText
        android:id="@+id/input_uts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="UTS"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_uh" />

    <EditText
        android:id="@+id/input_uas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="UAS"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_uts" />

    <TextView
        android:id="@+id/text_hasil"
        android:layout_width="364dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:background="@color/black_100"
        android:gravity="center"
        android:text="NILAI AKHIR"
        android:textColor="@color/soft_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_uas" />

    <Button
        android:id="@+id/btn_hasil"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="48dp"
        android:onClick="hitung"
        android:text="Hasil"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="48dp"
        android:onClick="hapusDataNilai"
        android:text="Hapus"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="412dp"
        android:layout_height="162dp"
        android:background="@color/black_100"
        android:gravity="center"
        android:text="SMKN NEGERI ! DEPOK"
        android:textColor="@color/soft_white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="34dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="NILAI SISWA"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>